# Aro Media Smart Contracts - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Deployer private key (without 0x prefix)
# IMPORTANT: Never commit your actual private key to version control
WALLET_KEY=your_private_key_here

# Authority address for AccessManaged contracts
# This should be the AccessManager contract address after deployment
# For initial AccessManager deployment, this will be the MultiSig address
AUTHORITY=0x0000000000000000000000000000000000000000

# =============================================================================
# MULTISIG CONFIGURATION
# =============================================================================

# Comma-separated list of signer addresses for the MultiSig wallet
# Example: 0x1234...,0x5678...,0x9abc...
# Each address must be a valid Ethereum address (0x followed by 40 hex characters)
MULTISIG_SIGNERS=0x1234567890abcdef1234567890abcdef12345678,0xabcdef1234567890abcdef1234567890abcdef12

# Number of required signatures (must be <= number of signers)
# Example: For a 2-of-3 multisig, set MULTISIG_THRESHOLD=2
MULTISIG_THRESHOLD=2

# =============================================================================
# NETWORK RPC ENDPOINTS
# =============================================================================

# Ethereum Mainnet
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key

# Ethereum Sepolia Testnet
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key

# Base Mainnet
BASE_RPC_URL=https://mainnet.base.org

# Base Sepolia Testnet
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Optimism Mainnet (Superchain)
OPTIMISM_RPC_URL=https://mainnet.optimism.io

# =============================================================================
# BLOCK EXPLORER API KEYS (for contract verification)
# =============================================================================

# Etherscan API Key (for Ethereum mainnet and testnets)
ETHERSCAN_API_KEY=your_etherscan_api_key

# Basescan API Key (for Base mainnet and testnets)
BASESCAN_API_KEY=your_basescan_api_key

# Optimism Etherscan API Key
OPTIMISM_ETHERSCAN_API_KEY=your_optimism_etherscan_api_key

# =============================================================================
# OPTIONAL: GAS CONFIGURATION
# =============================================================================

# Gas price in gwei (optional, uses network default if not set)
# GAS_PRICE=20

# Gas limit multiplier (optional, default is 1.2)
# GAS_LIMIT_MULTIPLIER=1.2

# =============================================================================
# OPTIONAL: TESTING CONFIGURATION
# =============================================================================

# Fork URL for mainnet forking tests
# FORK_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key

# Block number to fork from (optional)
# FORK_BLOCK_NUMBER=18000000
